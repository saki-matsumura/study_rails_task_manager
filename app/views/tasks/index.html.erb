<h1>タスク一覧</h1>
<%= link_to 'タスクを登録する', new_task_path %>

<%= link_to "終了期限でソートする", tasks_path(deadline: "true") %>

<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.text_field :title_like %>
  <%= form.select(:status, Task.statuses_i18n.invert, {include_blank: true}) %>
  <%= form.submit '検索', name: 'search' %>
<% end %>

<table>
  <tr>
    <th>タスク名</th>
    <th>概要</th>
    <th>終了期限</th>
    <th>ステータス</th>
  </tr>
  <% @tasks.each do | task | %>
  <tr class = "task_row" >
    <td><%= task.title %></td>
    <td><%= task.summary %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status_i18n %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete ,data: { confirm: '本当に削除してよろしですか？'} %></td>
  </tr>
  <% end %>
</table>