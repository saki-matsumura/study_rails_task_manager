<div class="task_index">
<h1 class="admin">ユーザー一覧</h1>

<%= link_to '新規ユーザー登録', new_admin_user_path, class: "btn btn-primary" %>

  <table>
    <tr>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>権限</th>
      <th>タスク数</th>
    </tr>
    <% @users.each do |user| %>
    <tr class = "task_row" >
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.roll_i18n %></td>
      <td><%= user.tasks.count %></td>
      <td class="user_nav"><%= link_to '詳細', admin_user_path(user.id), class: "btn btn-outline-primary" %></td>
      <td class="user_nav"><%= link_to '編集', edit_admin_user_path(user.id), class: "btn btn-outline-success" %></td>
      <td class="user_nav"><%= link_to '削除', admin_user_path(user.id), method: :delete ,data: { confirm: "本当に#{user.name}を削除してよろしですか？"}, class: "btn btn-outline-danger" %></td>
    </tr>
    <% end %>
  </table>
</div>